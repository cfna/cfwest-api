{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "baseUrl": "src"
  },
  "include": [
    "src/**/*"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": ".docz/dist-api"
  }
}