{
  "name": "@cfwest/api",
  "description": "Api Module and Models / Classes for CrossFire West",
  "version": "0.2.6",
  "private": false,
  "license": "MIT",
  "author": {
    "name": "Patrick Jung",
    "email": "patrick.pddstudio@gmail.com"
  },
  "homepage": "https://github.com/cfna/cfwest-api",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cfna/cfwest-api.git"
  },
  "directories": {
    "lib": "./dist",
    "test": "./tests"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "crossfire",
    "west",
    "cfwest",
    "z8games",
    "cf",
    "rest"
  ],
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc",
    "clean": "rimraf dist/",
    "lint": "tslint --project tsconfig.json --config tslint.json --fix",
    "pretest": "yarn build",
    "test": "jest",
    "format": "prettier --write \"**/*.ts\"",
    "prerelease": "yarn build",
    "prerelease:patch": "yarn build",
    "prerelease:minor": "yarn build",
    "prerelease:major": "yarn build",
    "release": "dotenv release-it --",
    "release:patch": "dotenv release-it --increment=patch",
    "release:minor": "dotenv release-it --increment=minor",
    "release:major": "dotenv release-it --increment=major",
    "prepackage:create": "yarn build",
    "package:create": "yarn pack --filename $PKG_ARCHIVE_NAME",
    "predocs": "rimraf docs",
    "docs": "typedoc"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "lodash.merge": "^4.6.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "@types/lodash.merge": "^4.6.6",
    "conventional-changelog-cli": "^2.0.34",
    "dotenv-cli": "^3.1.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "release-it": "^13.5.8",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.13.0",
    "typedoc": "^0.17.6",
    "typescript": "^3.9.2"
  }
}
