{
  "name": "@cfwest/api-client",
  "description": "Unofficial CrossFire West ApiClient implementation.",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "author": {
    "name": "PDDStudio"
  },
  "homepage": "https://github.com/cfna/cfwest-api",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cfna/cfwest-api.git"
  },
  "directories": {
    "lib": "./dist",
    "test": "./tests"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "crossfire",
    "west",
    "cfwest",
    "z8games",
    "cf",
    "rest"
  ],
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc",
    "clean": "rimraf dist",
    "clean:all": "rimraf dist && rimraf node_modules",
    "lint": "tslint --project tsconfig.json --config tslint.json --fix",
    "pretest": "yarn build",
    "test": "jest",
    "format": "prettier --parser typescript --write \"**/*.ts\"",
    "prerelease": "yarn build",
    "prerelease:patch": "yarn build",
    "prerelease:minor": "yarn build",
    "prerelease:major": "yarn build",
    "release": "dotenv release-it --",
    "release:patch": "dotenv release-it --increment=patch",
    "release:minor": "dotenv release-it --increment=minor",
    "release:major": "dotenv release-it --increment=major",
    "predocs": "rimraf docs",
    "docs": "typedoc"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^28.0.0",
    "@types/lodash": "^4.14.184",
    "husky": "^8.0.1",
    "jest": "^28.0.0",
    "lerna": "^5.5.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "release-it": "^15.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "tslint": "^6.1.3",
    "typedoc": "^0.23.13",
    "typescript": "^4.8.2",
    "winston": "^3.8.1",
    "ts-node": "^10.9.1"
  }
}
